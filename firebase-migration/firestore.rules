rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && resource.data.role == 'admin';
    }

    // Posts - users can read all, admins can write
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         resource.data.author_id == request.auth.uid);
    }

    // Alerts - admins can write, users can read
    match /alerts/{alertId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Map markers - users can read all, write their own
    match /mapMarkers/{markerId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (resource.data.created_by == request.auth.uid ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // Checklist items - users can read/write their own
    match /checklistItems/{itemId} {
      allow read, write: if request.auth != null && resource.data.user_id == request.auth.uid;
    }

    // Emergency contacts - public read
    match /emergencyContacts/{contactId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // First aid guides - public read
    match /firstAidGuides/{guideId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Hazard zones - public read, admin write
    match /hazardZones/{zoneId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Comments - users can read all, write their own
    match /comments/{commentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (resource.data.user_id == request.auth.uid ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // Likes - users can read all, write their own
    match /likes/{likeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && resource.data.user_id == request.auth.uid;
    }

    // Notifications - users can read/write their own
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && resource.data.user_id == request.auth.uid;
    }
  }
}
