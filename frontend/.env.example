# ===================================
# FRONTEND ENVIRONMENT VARIABLES
# ===================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to git!

# ===================================
# API CONFIGURATION
# ===================================
# Development
VITE_API_URL=http://localhost:3000

# Production (update with your actual backend URL)
# VITE_API_URL=https://disaster-app-backend.onrender.com

# ===================================
# CLOUDINARY (for image uploads)
# ===================================
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# ===================================
# APPLICATION SETTINGS
# ===================================
VITE_APP_NAME=AlertoAbra
VITE_APP_VERSION=1.0.0

# ===================================
# FEATURE FLAGS
# ===================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# ===================================
# MAP CONFIGURATION
# ===================================
# If using custom map tiles or API keys
# VITE_MAP_API_KEY=your_map_api_key
# VITE_MAP_STYLE_URL=your_custom_map_style

# ===================================
# FIREBASE (if using Firebase features)
# ===================================
# VITE_FIREBASE_API_KEY=your_firebase_api_key
# VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
# VITE_FIREBASE_PROJECT_ID=your_project_id
# VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
# VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
# VITE_FIREBASE_APP_ID=your_app_id
